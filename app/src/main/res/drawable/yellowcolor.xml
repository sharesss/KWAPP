<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--  设置背景色（灰色）  -->
    <item  android:id="@android:id/background" >
        <shape>
            <corners android:radius="12dp" />
            <size android:width="250dp"
                android:height="1dp"/>
            <gradient android:startColor="@color/gray_p"
                android:endColor="@color/gray_p" />

        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <solid android:color="#f8e9b5" />
                <size android:width="250dp"
                    android:height="1dp"/>
            </shape>
        </clip>
    </item>
    <!--  设置进度条颜色（绿色）  -->
    <item  android:id="@android:id/progress" >
        <clip>
            <shape>
                <corners android:radius="12dp" />
                <gradient  android:startColor="#f8e9b5"
                    android:endColor="#f8e9b5" />
                <size android:width="250dp"
                    android:height="1dp"/>
            </shape>
        </clip>
    </item>
</layer-list>
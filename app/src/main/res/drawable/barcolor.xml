<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--  设置背景色（蓝色）  -->
    <item  android:id="@android:id/background" >
        <shape>
            <corners android:radius="6dp" />
            <gradient android:startColor="@color/gray_line"
                android:endColor="@color/gray_line" />
        </shape>
    </item>

    <!--  设置进度条颜色（红色）  -->
    <item  android:id="@android:id/progress" >
        <clip>
            <shape>
                <corners android:radius="6dp" />
                <gradient  android:startColor="#EC6A6A"
                    android:endColor="#EC6A6A" />
            </shape>
        </clip>
    </item>
</layer-list>
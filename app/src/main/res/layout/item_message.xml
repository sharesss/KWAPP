<?xml version="1.0" encoding="utf-8"?>
<widget.testlistview.view.CstSwipeDelMenuViewGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rly_parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:background="@color/white"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            style="@style/base_wrap"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_5"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/font_main"
            android:textSize="@dimen/sp_17" />
        <TextView
            android:id="@+id/tv_isfounder"
            style="@style/base_wrap"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/tv_name"
            android:textColor="@color/font_main_secondary"
            android:text="创始人"
            android:visibility="gone"
            android:background="@drawable/bg_gray_label_shape"
            android:textSize="@dimen/sp_15"/>
        <TextView
            android:id="@+id/tv_isInvestAuthen"
            style="@style/base_wrap"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/tv_isfounder"
            android:textColor="@color/font_main_secondary"
            android:text="投资人"
            android:visibility="gone"
            android:background="@drawable/bg_gray_label_shape"
            android:textSize="@dimen/sp_15"/>
        <TextView
            android:id="@+id/tv_time"
            style="@style/base_wrap"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:textColor="@color/font_main_secondary"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv_red_status"
            style="@style/base_wrap"
            android:layout_toLeftOf="@id/tv_time"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_13"
            android:src="@mipmap/icon_red_dot"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/tv_name"
            android:textSize="@dimen/sp_12"
            />
        <TextView
            android:id="@+id/tv_message_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:textSize="@dimen/sp_12"
            android:layout_toRightOf="@id/tv_type"
            />
        <View
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0d5"
            android:layout_alignParentBottom="true"
            android:background="@color/color_ebebeb" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_del"
        android:layout_width="@dimen/dp_70"
        android:layout_height="match_parent"
        android:background="@color/text_red"
        android:gravity="center"
        android:text="@string/del"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />
</widget.testlistview.view.CstSwipeDelMenuViewGroup>
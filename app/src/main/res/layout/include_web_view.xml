<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical">

    <widget.titlebar.NavigationView
        android:id="@id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/navigation_view"
        android:background="@color/color_c8c8c8"/>
    <com.thindo.base.Widget.refresh.RefreshWebView
        android:id="@+id/refresh_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/navigation_view"
        android:overScrollMode="never"
        android:smoothScrollbar="true"
        android:layout_marginTop="1px"
        app:ptrHeaderBackground="@color/ui_bgs"
        app:ptrMode="disabled"
        app:ptrShowIndicator="false" />

</RelativeLayout>
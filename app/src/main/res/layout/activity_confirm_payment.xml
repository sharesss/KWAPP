<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/color_f5f5f5"
    android:layout_height="match_parent">
    <widget.titlebar.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/gray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">
        <View
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/orange"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="预约股权"
            android:textColor="@color/gray"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_phone_num"
        style="@style/text_user_item_style"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/line_bg" />

        <TextView
            android:id="@+id/tv_percentage"
            style="@style/base_wrap"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/font_main"
            android:text="胡桃里总公司股权（7%）"
            android:textSize="@dimen/sp_15" />


        <TextView
            android:id="@+id/tv_total_amount"
            style="@style/base_wrap"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center"
            android:text="¥ 70000"
            android:textColor="@color/font_main_secondary"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_alignParentBottom="true"
            android:background="@color/line_bg" />
    </RelativeLayout>

    <LinearLayout
        style="@style/text_user_item_style"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/line_bg" />
        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="跟投人姓名"
            android:paddingLeft="20dp"
            android:textColor="@color/picker_text_120"
            android:background="@null"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/line_bg" />

    </LinearLayout>
    <LinearLayout
        style="@style/text_user_item_style"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/line_bg" />
        <EditText
            android:id="@+id/edt_wechat"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="微信号"
            android:paddingLeft="20dp"
            android:textColor="@color/picker_text_120"
            android:background="@null"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/line_bg" />

    </LinearLayout>

    <LinearLayout
        style="@style/text_user_item_style"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/line_bg" />
        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="电话"
            android:paddingLeft="20dp"
            android:maxLength   ="11"
            android:textColor="@color/picker_text_120"
            android:background="@null"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/line_bg" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:gravity="center"
        >


        <TextView
            style="@style/base_wrap"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/font_main"
            android:text="预约金（7%）"
            android:textSize="@dimen/sp_15" />


        <TextView
            android:id="@+id/tv_reservation_money"
            style="@style/base_wrap"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center"
            android:text="¥ 70000"
            android:textColor="@color/orange"
            android:textSize="@dimen/sp_15" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_wxconfirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:text="微信支付"
            android:background="@drawable/bg_full_orange_5_shape"/>
    </LinearLayout>
</LinearLayout>
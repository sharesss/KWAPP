<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/tv_my_story"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="我的故事"
            android:gravity="center"
            android:textColor="@color/orange"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_project_return"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="项目回报"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_project_highlights"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="项目亮点"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_project_schedule"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="项目进度"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@color/gray_line"
        android:layout_height="1dp">
        <TextView
            android:id="@+id/tv_my_story_lin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/orange"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/tv_project_return_lin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/gray"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/tv_project_highlights_lin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/gray"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/tv_project_schedule_lin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/gray"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="1dp" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AppWidget"
    style="@style/base_match"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <widget.titlebar.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_stauts"
        style="@style/base_wrap"
        android:layout_below="@id/navigation_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_100" />

    <TextView
        android:id="@+id/tv_status"
        style="@style/base_wrap"
        android:layout_below="@id/iv_stauts"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/font_main"
        android:gravity="center"
        android:textSize="@dimen/sp_17" />

    <TextView
        android:id="@+id/btn_nexts"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_orange_5_shape"
        android:clickable="true"
        android:gravity="center"
        android:visibility="invisible"
        android:text="进行投资人认证"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />


    <TextView
        android:id="@+id/tv_desc"
        style="@style/base_height_wrap"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_100"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_5"
        android:background="@drawable/bg_full_gray_5_shape"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="@color/font_main"
        android:textSize="@dimen/sp_15" />

</RelativeLayout>

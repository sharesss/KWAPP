                    android:layout_height="@dimen/px_1"
                    android:layout_marginLeft="20dp"
                    android:background="@color/line_bg" />

                <TextView
                    style="@style/base_wrap"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"

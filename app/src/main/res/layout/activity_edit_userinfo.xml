<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AppWidget"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <widget.titlebar.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_c8c8c8"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_head_portrait"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_1"
                    android:background="@color/line_bg" />

                <TextView
                    style="@style/base_wrap"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="@string/head_portrait"
                    android:textColor="@color/font_main"
                    android:textSize="@dimen/sp_15" />

                <widget.image.CircleImageView
                    android:id="@+id/iv_portrait"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_30"
                    android:src="@mipmap/def_02" />

                <ImageView
                    android:id="@+id/iv_arrow_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/icon_account_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:background="@color/line_bg" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_nickname"
                style="@style/text_user_item_style">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_1"
                    android:layout_marginLeft="20dp"
                    android:background="@color/line_bg" />

                <TextView
                    style="@style/base_wrap"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="@string/nick_name"
                    android:textColor="@color/font_main"
                    android:textSize="@dimen/sp_15" />


                <TextView
                    android:id="@+id/tv_nickname"
                    style="@style/base_wrap"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_5"
                    android:drawableRight="@mipmap/icon_account_arrow"
                    android:gravity="center"
                    android:text="@string/user_info_nodata"
                    android:textColor="@color/font_main_secondary"
                    android:textSize="@dimen/sp_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:background="@color/line_bg" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_gender"
                style="@style/text_user_item_style">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_1"
                    android:layout_marginLeft="20dp"
                    android:background="@color/line_bg" />

                <TextView
                    style="@style/base_wrap"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="@string/sex"
                    android:textColor="@color/font_main"
                    android:textSize="@dimen/sp_15" />


                <TextView
                    android:id="@+id/tv_sex"
                    style="@style/base_wrap"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_5"
                    android:drawableRight="@mipmap/icon_account_arrow"
                    android:gravity="center"
                    android:text="@string/user_info_nodata"
                    android:textColor="@color/font_main_secondary"
                    android:textSize="@dimen/sp_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:background="@color/line_bg" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_age"
                style="@style/text_user_item_style">


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/AppWidget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/color_f5f5f5"
    android:windowSoftInputMode="adjustPan">

    <RelativeLayout
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:id="@+id/btn_finish"
            style="@style/base_wrap"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawableLeft="@mipmap/rule_icon"
            android:drawablePadding="@dimen/dp_3"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/btn_login"
            style="@style/base_wrap"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/iv_message"
            style="@style/base_wrap"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@mipmap/message_icon"
             />


    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/navigation_view"
        android:background="@color/gray_line"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/view"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_stock_auction"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="10dp"
        >

        <android.support.v4.view.ViewPager
            android:id="@+id/stock_auction_viewpager"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:visibility="visible"
            android:layout_gravity="center" />

            <!--用来填充圆点指示器的容器-->
            <LinearLayout
                android:id="@+id/point_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="horizontal"
                android:visibility="visible">

            </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_popularity"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/rl_stock_auction">

        <android.support.v4.view.ViewPager
            android:id="@+id/popularity_viewpager"
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:layout_gravity="center" />

            <!--用来填充圆点指示器的容器-->
            <LinearLayout
                android:id="@+id/point_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="horizontal"
                android:visibility="visible">

            </LinearLayout>
    </RelativeLayout>


    <widget.EmptyView
        android:id="@+id/empty_view"
        style="@style/base_wrap"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />
</LinearLayout>
    </ScrollView>
</RelativeLayout>
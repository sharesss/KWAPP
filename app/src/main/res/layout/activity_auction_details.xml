<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/color_f5f5f5"
    android:layout_height="match_parent">

    <com.thindo.base.Widget.refresh.RefreshScrollView
        android:id="@+id/refresh_scroll"
        style="@style/base_match"
        android:layout_marginBottom="@dimen/dp_60"
        android:background="@color/activity_ui_bgs"
        android:cacheColorHint="@color/none"
        android:fadingEdge="none"
        android:overScrollMode="never"
        app:ptrAnimationStyle="flip"
        app:ptrHeaderBackground="@color/ui_bgs"
        app:ptrMode="both"
        app:ptrShowIndicator="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/btn_finish"
            style="@style/base_wrap"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawableLeft="@mipmap/ease_mm_title_back"
            android:drawablePadding="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/btn_login"
            style="@style/base_wrap"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/iv_share"
            style="@style/base_wrap"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="10dp"
            android:background="@mipmap/share_icon"
            android:visibility="gone"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_button_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_praise"
            style="@style/base_wrap"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_5"
            android:text="拍卖结束"
            android:textColor="@color/white"
            android:background="@drawable/bg_orange_5_shape"
            android:textSize="@dimen/sp_15" />

        <Button
            android:id="@+id/bt_comment"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toLeftOf="@id/tv_praise"
            android:background="@drawable/bg_edit_text_shape"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:text="@string/text_comment"
            android:textColor="@color/font_main_secondary"
            android:textSize="@dimen/sp_15" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_auction_house"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dp_60"
        android:layout_marginRight="10dp"
        android:background="@mipmap/auction_icon" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_stock_auction"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_temp"
        style="@style/base_wrap"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20">

        <widget.image.FMNetImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_100"
            android:scaleType="fitXY" />
        
        <TextView
            android:id="@+id/tv_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_image"
            android:text="【胡桃里股权】"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_frozen_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_image"
            android:layout_below="@id/tv_project_name"
            android:layout_marginTop="20dp"
            android:text="冻结金额¥2000"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_frozen_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_image"
            android:layout_below="@id/tv_frozen_money"
            android:layout_marginTop="20dp"
            android:text="2017-8-27"
            android:textColor="@color/black"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/coupon_line"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_follow_project"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_portrait" />

        <TextView
            android:id="@+id/tv_success_frozen_money"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:textColor="@color/orange"
            android:layout_toRightOf="@id/iv_portrait" />

    </LinearLayout>


</LinearLayout>